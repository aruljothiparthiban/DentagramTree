CREATE KEYSPACE user
WITH REPLICATION = { 'class' : 'SimpleStrategy', 'replication_factor' : 1 };
USE user;
CREATE TABLE users (
firstname text,
lastname text,
age int,
email text,
city text,
password text,
PRIMARY KEY (email));

create table adminusers
(
	userid uuid,
	firstname text,
	lastname text,
	email text,
	password text,
	facebookurl text,
	twitterurl text,
	googleplusurl text,
	address_street text,
	address_city text,
	address_state text,
	address_zip text,
	address_country text,
	about_me text,
	createdAt timestamp,
	updatedAt timestamp,
	isActive boolean,
	pwdResetToken varchar,
	pwdResetTokenExpires timestamp,
	primary key(userid)
);
create index on adminusers (email);
create index on adminusers (isActive);